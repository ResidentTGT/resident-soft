{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"lib": ["ES2021", "dom"],
		"baseUrl": "./",
		"paths": {
			"@src/*": ["src/*"],
			"@utils/*": ["src/utils/*"],
			"@freeModules/*": ["src/free/modules/*"],
			"@freeScenarios/*": ["src/free/scenarios/*"],
			"@freeHandlers/*": ["src/free/handlers/*"],
			"@premiumModules/*": ["src/premium/modules/*"],
			"@premiumScenarios/*": ["src/premium/scenarios/*"],
			"@premiumHandlers/*": ["src/premium/handlers/*"]
		},
		"allowJs": true,
		"outDir": "./build",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": false,
		"sourceMap": true
	},
	"exclude": ["dist", "build", "frontend"]
}
